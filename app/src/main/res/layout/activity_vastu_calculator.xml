<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VastuCalculator">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_head"
        app:cardBackgroundColor="@color/color_button_default"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"

        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/parent_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textAppearance="@style/CustomQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluate Your House According to Vastu Shastra"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
       android:background="@drawable/input_back"
        android:id="@+id/question_no"
        android:textColor="@color/accent"
        android:text="1/10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/card_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_below="@id/question_no"
        android:layout_centerInParent="true"
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:tint="@color/white"
        android:src="@drawable/arrow_left"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_top_view"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:tint="@color/white"
        android:id="@+id/fab"
        android:layout_marginBottom="@dimen/margin_top_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>
</LinearLayout>