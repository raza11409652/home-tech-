<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Budget_finished">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        app:cardUseCompatPadding="true"
        android:clipToPadding="true"
        app:cardElevation="@dimen/dr_padding"
        android:layout_marginTop="@dimen/margin_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/parent_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/margin_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yourBudget"
                android:textAlignment="center"
                style="@style/CustomQuestion"
                android:textColor="@color/primary_dark"
                android:layout_marginBottom="@dimen/margin_top_view"/>
            <LinearLayout
                android:padding="@dimen/dr_padding"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/formationType"
                    />
                <TextView
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textAlignment="viewEnd"
                    android:id="@+id/formationType"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/formationType"
                    />
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textAlignment="center"
                android:text="@string/budget_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/value"
                android:textStyle="italic"
                android:textColor="@color/primary_dark"
                android:textSize="48sp"
                android:textAlignment="center"
                android:text="2500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_head"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/parent_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:textAppearance="@style/CustomQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inclusion"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:drawableStart="@drawable/arrow_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_1"
                />
            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_2"
                />
            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_3"
                />
            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_4"
                />

            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_5"
                />

            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_6"
                />
            <TextView
                android:drawableStart="@drawable/arrow_right"
                android:textColor="@color/primary_text"
                android:drawablePadding="@dimen/dr_padding"
                android:drawableTint="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finished_7"
                />



            <Button
                android:id="@+id/btnHome"
                android:textColor="@color/white"
                android:theme="@style/PrimaryButton"
                android:text="@string/home"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>