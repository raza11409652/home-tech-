<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_image"
    android:padding="@dimen/parent_padding"
    android:focusableInTouchMode="true"
    android:id="@+id/mainLayout"
    >
    <!--splash scree-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/card"
            android:src="@drawable/logo_main"
            android:layout_width="180sp"
            android:layout_height="180sp"
            />
        <TextView
            android:layout_marginTop="@dimen/margin_top_view"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textSize="@dimen/title_text"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/primary_dark"
            android:fontFamily="cursive"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:text="@string/tag_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


<LinearLayout
    android:padding="@dimen/dr_padding"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >
    <Button
        android:layout_marginBottom="@dimen/margin_top_view"
        android:id="@+id/get_started"
        android:textColor="@color/icons"
        android:text="@string/get_started"
        android:background="@drawable/btn_round_accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
       android:theme="@style/PrimaryFlatButton"
        android:id="@+id/loginWithEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_with_email"
        />
</LinearLayout>

</RelativeLayout>