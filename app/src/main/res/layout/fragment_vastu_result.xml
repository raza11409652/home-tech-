<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vastu_result">

   <android.support.v7.widget.CardView
       android:id="@+id/card"
       app:cardUseCompatPadding="true"
       android:clipToPadding="true"
       app:cardElevation="@dimen/dr_padding"
       android:layout_marginTop="@dimen/margin_top_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:padding="@dimen/parent_padding"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="@dimen/margin_top_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/yourresult"
               android:textAlignment="center"
               style="@style/CustomQuestion"
               android:textColor="@color/primary_dark"
               android:layout_marginBottom="@dimen/margin_top_view"/>
           <RatingBar
               android:layout_gravity="center"
               android:id="@+id/rating"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:numStars="5"
               android:stepSize="0.1"
               android:isIndicator="true" />

           <ImageView
                android:layout_gravity="center"
               android:layout_width="128sp"
               android:layout_height="128sp"
               android:src="@drawable/compass"/>

           <TextView
               android:textAlignment="center"
               style="@style/CustomQuestion"
               android:text="@string/yourVastuRes"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/resultView"
               android:textColor="@color/themeColor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="89/100"
               android:textAlignment="center"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
               />
           <Button
               android:id="@+id/btnHome"
               android:textColor="@color/white"
               android:theme="@style/PrimaryButton"
               android:text="@string/home"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </android.support.v7.widget.CardView>

</FrameLayout>